manifest with default values should match snapshot:
  1: |
    apiVersion: apps/v1
    kind: Deployment
    metadata:
      name: RELEASE-NAME-deployment
    spec:
      replicas: 1
      selector:
        matchLabels:
          app: RELEASE-NAME
      template:
        metadata:
          labels:
            app: RELEASE-NAME
        spec:
          containers:
            - command:
                - kermoo
                - start
              image: docker.io/evryn/kermoo:latest
              name: kermoo
              ports:
                - containerPort: 80
                - containerPort: 8080
              volumeMounts:
                - mountPath: ~/.kermoo/config.yaml
                  name: config-volume
                  subPath: config.yaml
          volumes:
            - configMap:
                name: RELEASE-NAME-config
              name: config-volume
